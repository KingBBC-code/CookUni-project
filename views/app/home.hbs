
{{>navbar}}

{{#if isLoading}}
<div class="text-center mt-5">
  <img src="../../img/loading.gif" alt="">
</div>
{{else}}

         <main role="main" class="inner cover mt-5">
            <h1 class="cover-heading">Coooooking University</h1>
            <p class="lead">They say that food passes through the stomach, we say that food passes through CookUni...
            </p>
        </main>

<div class="rooter">
    
  <h1 class="text-center">Our Recipes</h1>
     {{#each myRecipes}}
   <div id="sharedRecipes">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="our-team-main">

                            <div class="team-front">
                                <img src="{{categoryImageURL}}" />
                                <h3>{{meal}}</h3>
                                <p>{{category}}</p>
                            </div>

                            <div class="team-back">
                                <div class="back-side-info">
                                    <h4>Ingredients</h4>
                                    <ul>
                                        {{#each ingredients}}
                                        <li>{{this}}</li>
                                    </ul>
                                    <a href="/recipe{{_id}}">View the recipe</a>
                                </div>

                                <img class="foodImage"
                                    src="{{foodImageURL}}" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>


      
    {{else}}
     <div id='foodNotFound'>
            <img src="https://t4.ftcdn.net/jpg/00/62/17/31/240_F_62173114_ozantkVtkPgzL0fxssAkTqKX1FHPr0UW.jpg" />
            <h3>Food not found...</h3>
        </div>

    
  </div>
</div>
{{/each}}
 {{/if}}
{{>notifications}}
{{>footer}}